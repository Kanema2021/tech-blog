<div class="row">
    <div class="col-auto">
        <h2>Hello, {{name}}!</h2>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-6">
        <h3> Write New Blog Here</h3>
        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-title">Blog Title</label>
                <input class="form-input" type="text" id="newBlog" name="newBlog" />
            </div>
            <div class="form-group">
                <label for="blog-text">Blog</label>
                <textarea class="form-input" id="blog-text" name="blog-text" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn">Submit</button>
            </div>
        </form>
    </div>
    {{#if blogs.length}}
    <div class="row mb-2">
        <h3>Current Blogs</h3>
        {{#each blogs as |blog|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href"/blog/{{blog.id}}"></a></h4>
            </div>
            <div class="col-md-8">
                <button class="btn" "btn-sm" data-id={{blog.id}}>DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/addBlog.js"></script>